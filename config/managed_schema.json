{
  "type": "object",
  "properties": {
    "showNotifications": {
      "title": "Meldingen weergeven",
      "description": "Beveiligingsmeldingen en waarschuwingen weergeven",
      "type": "boolean",
      "default": true
    },
    "enableValidPageBadge": {
      "title": "Geldige paginabadge weergeven",
      "description": "Validatiebadge weergeven op legitieme Microsoft-aanmeldingspagina's",
      "type": "boolean",
      "default": true
    },
    "validPageBadgeTimeout": {
      "title": "Time-out geldige paginabadge (seconden)",
      "description": "Automatische verwijderingstijd voor de geldige paginabadge in seconden. Stel in op 0 voor geen time-out (badge blijft zichtbaar totdat het handmatig wordt gesloten).",
      "type": "integer",
      "minimum": 0,
      "maximum": 300,
      "default": 5
    },
    "enablePageBlocking": {
      "title": "Paginavergrendeling ingeschakeld",
      "description": "Blokkering van kwaadwillende pagina's inschakelen",
      "type": "boolean",
      "default": true
    },
    "enableCippReporting": {
      "title": "CIPP-rapportage ingeschakeld",
      "description": "Rapportage naar CIPP-server inschakelen",
      "type": "boolean",
      "default": false
    },
    "cippServerUrl": {
      "title": "CIPP Server-URL",
      "description": "Basis-URL voor CIPP-rapportageserver",
      "type": "string",
      "format": "uri",
      "default": ""
    },
    "cippTenantId": {
      "title": "CIPP Tenant-ID/Domein",
      "description": "Tenant-ID om op te nemen bij CIPP-waarschuwingen voor multi-tenant-omgevingen",
      "type": "string",
      "default": ""
    },
    "customRulesUrl": {
      "title": "Aangepaste regelset-URL",
      "description": "URL om aangepaste detectieregels van op te halen",
      "type": "string",
      "format": "uri",
      "default": ""
    },
    "updateInterval": {
      "title": "Update-interval (uren)",
      "description": "Hoe vaak detectieregels moeten worden bijgewerkt in uren",
      "type": "integer",
      "minimum": 1,
      "maximum": 168,
      "default": 24
    },
    "urlAllowlist": {
      "title": "URL-allowlijst (URL's met jokertekens of regex)",
      "description": "Matrix van URL-patronen of regex-patronen om URL's van detectie toe te staan. Ondersteunt eenvoudige URL's met * jokertekens (bijv. https://google.com/*) of geavanceerde regex-patronen.",
      "type": "array",
      "items": {
        "type": "string",
        "title": "URL-patroon of regex",
        "description": "URL met jokertekens (bijv. https://google.com/*) of reguliere-expressieparatroon om URL's af te stemmen die moeten worden toegestaan"
      },
      "default": []
    },
    "enableDebugLogging": {
      "title": "Foutopsporingslogboeken ingeschakeld",
      "description": "Foutopsporingslogboeken inschakelen voor probleemoplossing",
      "type": "boolean",
      "default": false
    },
    "genericWebhook": {
      "title": "Algemene webhook",
      "description": "Algemene webhook-configuratie voor het verzenden van detectiegebeurtenissen naar aangepast eindpunt",
      "type": "object",
      "properties": {
        "enabled": {
          "title": "Ingeschakeld",
          "description": "Algemene webhook inschakelen",
          "type": "boolean",
          "default": false
        },
        "url": {
          "title": "Webhook-URL",
          "description": "De URL waarnaar webhook-payloads moeten worden verzonden",
          "type": "string",
          "format": "uri",
          "default": ""
        },
        "events": {
          "title": "Gebeurtenistypen",
          "description": "Matrix van gebeurtenistypen die naar deze webhook moeten worden verzonden",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "detection_alert",
              "false_positive_report",
              "page_blocked",
              "rogue_app_detected",
              "threat_detected",
              "validation_event"
            ]
          },
          "default": []
        }
      }
    },
    "customBranding": {
      "title": "Aangepast branding",
      "description": "Aangepaste branding-configuratie voor white labeling",
      "type": "object",
      "properties": {
        "companyName": {
          "title": "Bedrijfsnaam",
          "description": "Bedrijfsnaam om in de extensie weer te geven",
          "type": "string",
          "default": ""
        },
		"companyURL": {
          "title": "Bedrijfs-URL",
          "description": "Bedrijfs-URL gebruikt in de extensie",
          "type": "string",
          "default": "https://tosch.nl/"
        },
        "productName": {
          "title": "Productnaam",
          "description": "Aangepaste naam voor de extensie",
          "type": "string",
          "default": ""
        },
        "supportEmail": {
          "title": "Ondersteuning e-mailadres",
          "description": "E-mailadres voor gebruikersondersteuning",
          "type": "string",
          "format": "email",
          "default": ""
        },
        "primaryColor": {
          "title": "Primaire kleur",
          "description": "Primaire theminkleur (hexadecimale code)",
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
          "default": "#F77F00"
        },
        "logoUrl": {
          "title": "Logo-URL",
          "description": "URL naar bedrijfslogo",
          "type": "string",
          "format": "uri",
          "default": ""
        }
      }
    }
  }
}